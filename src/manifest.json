{
    "name": "__MSG__appName__",
    "manifest_version": 2,
    "version": "0.1.1.1",
    "description": "__MSG__appDesc__",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "default_locale": "zh_TW",
    "permissions": [
        "tabs", "storage", "http://*/*", "https://*/*"
    ],
    "browser_action": {
        "default_icon": "icon19grey.png",
        "default_title": "Lyrics 163",
        "default_popup": "popup.html"
    },
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://music.163.com/*"
            ],
            "css": [
                "myLyrics.css"
            ],
            "js": [
                "jquery-1.7.2.min.js",
                "myLyrics.js"
            ]
        }
    ]
}